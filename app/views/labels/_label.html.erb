
<div id="<%= dom_id label %>">
  <div class="bloc-record">
    <div class="row align-items-center">
      <div class="col-10 m-0 p-1 text-start">
         <p>
          <strong>Principale:</strong>
          <%= label.principale %>
        </p>
        <p>
          <strong>Soiree:</strong>
          <%= label.soiree %>
        </p>
        <p>
          <strong>Mariee:</strong>
          <%= label.mariee %>
        </p>
        <p>
          <strong>Homme:</strong>
          <%= label.homme %>
        </p>
        <p>
          <strong>Accessoire:</strong>
          <%= label.accessoire %>
        </p>
        <p>
          <strong>Deguisement:</strong>
          <%= label.deguisement %>
        </p>
        <p>
          <strong>Infos:</strong>
          <%= label.info %>
        </p>
        <p>
          <strong>Boutique:</strong>
          <%= label.boutique %>
        </p>

      </div> 
      <div class="col-2 m-0 p-1 text-end">
        <%#= link_to '', label_path(label), 
            class:"fa-regular fa-folder-open btn btn-sm btn-success mb-1" %> 
        <%= button_to "", edit_label_path(label), 
            class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary mb-1", method: :post %> 
        <%= button_to '', label_path(label), 
            class:"fa-solid fa-trash-can btn btn-danger btn-sm", method: :delete %> 
      </div>
    </div>
  </div>

</div>
