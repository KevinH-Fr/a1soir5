
  <div class="chartBox mx-auto">
    <canvas id="myChartPieCa"></canvas>
  </div>

  <% @totalCa = Article.sum_articles + Sousarticle.sum_sousarticles %>
  <% @totalLoc =  Article.articlesLoues.sum_articles + Sousarticle.sum_sousarticles %>
  <%# en l'etat les sous articles passent que Ã  la vente dans le calcul%>
  <% @totalVente = Article.articlesVendus.sum_articles %>

  <% @data = [@totalLoc, @totalVente] %>

 
<script>
  var couleur1 = 'rgb(116, 159, 130)';
  var couleur2 = 'rgb(66, 95, 87)';

  var nbTotalCa = <%= @totalCa %>;

  var centerTextDoghnutCa = {
    id: 'centerTextDoghnutCa',
    afterDatasetsDraw(chart, args, pluginOptions){
      const { ctx } = chart;
      ctx.textAlign = "center";
      ctx.textBaseline = "middle";
      ctx.font = "bold 12px sans-serif";
      const text = "total " + nbTotalCa ;
      const textWidth = ctx.measureText(text).width;
      const x = chart.getDatasetMeta(0).data[0].x;
      const y = chart.getDatasetMeta(0).data[0].y;
      ctx.fillText(text, x, y);
    }
  }

   var dataPieCa = {
      labels: ['location', 'vente'],
      datasets: [{
        data: <%= @data.to_json.html_safe %>,
        fill: true,
        backgroundColor: [ couleur1, couleur2 ],
        borderWidth: 1
      }]
    };

    var configPieCa = {
      type: 'doughnut',
          data: {
            labels: ['location', 'vente'],
            datasets: [{
              data: <%= @data.to_json.html_safe %>,       
              backgroundColor: [ couleur1, couleur2 ],
              hoverOffset: 40,
              borderWidth: 1,
              cutout: '50%'
            }]
          },
          options: {
            animation: {
              animateRotate: true,
              duration: 5000
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
              },
            },

          },
          plugins: [centerTextDoghnutCa]
        };

  var myChartPieCa = new Chart(
    document.getElementById('myChartPieCa'),
    configPieCa
  );

</script>

