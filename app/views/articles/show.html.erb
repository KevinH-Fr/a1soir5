
  <% @commandeId = params[:commandeId] %>
  <% @produitId = params[:produitId] %>
  <% @articleId = params[:articleId] %>

  <% @clientId = Commande.find(@commandeId).client_id if @commandeId.present? %>

  <div class="bloc-entete-model">
    <div class="card card-header entete-index m-0 p-1 fw-bold">
      ARTICLE 
    </div>
  </div>

  <div class="bloc-record">
    <div class="card-body p-1">
      <div class="row p-0 m-0">
        <div class="col cadre-interieur">
          <%= render "selection_produit/produitLie" %> <br>
        </div>
        <div class="col cadre-interieur"> 
          <%= render @article %>
        </div>
      </div>
    </div>
  </div>

  <div class="bloc-entete-model">
    <div class="card card-header entete-index">
      <strong>Sous-articles</strong> 
    </div>
  </div>

  <%= render "sousarticles/sousarticlesLies" %> 
  
  <br>
  <%= render "articles/verifEnsemble" %> 
  <br>

  <div class="fixed-bottom footer-index text-center bg-dark">
    <div class="row">

      <div class="col-2 text-start">
        <%= link_to "", commande_path(@commandeId), class:"fa-solid fa-rotate-left btn btn-sm btn-secondary" %> 
      </div>

      <div class="col-8 text-center">
        <span class="badge bg-secondary"> <%= Commande.find(@commandeId).texte_record if @commandeId.present? %> </span>  
        <span class="badge bg-secondary"> <%= Client.find(@clientId).full_name if @clientId.present? %> </span> 
      </div>

      <div class="col-2 text-end">
        <%= link_to "", selection_produit_path(commandeId: @commandeId), 
              class:"fa-solid fa-square-plus btn btn-sm btn-primary",
              title: "Nouvel article" %> 

        <%= link_to "", commande_path(@commandeId), class:"fa-solid fa-square-check btn btn-sm btn-success" %> 
      </div>

    </div>
  </div>
