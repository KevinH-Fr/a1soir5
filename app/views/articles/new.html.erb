
<% @clientId = Commande.find(@commandeId).client_id if @commandeId.present? %>

<div class="bloc-entete-model">
  <div class="card card-header entete-index m-0 p-1">
    <div class="text-center fw-bold m-0 p-1"> Nouvel article </div>
  </div>
</div>

<%# liste des produits pour selection %>
<div class="bloc-record">
  <%= render "form", article: @article %>
</div>

<% if @produitId.present? && @ProdExist == false %>
  <div class="bloc-record container text-center">
    <h5 class="text-danger">  Ce produit n'existe pas dans la base de données </h5>
    <p> Merci de sélectionner un autre produit </p>
  </div>  
<% end %>

<br>

<div class="fixed-bottom footer-index text-center bg-dark">
    <div class="row justify-content-evenly">
        <div class="col-6 text-start">
            <%#= link_to "", commande_path(@commandeId), class:"fa-solid fa-rotate-left btn btn-sm btn-secondary" %> 
        </div>
        <div class="col-6 text-end">
          <span class="badge text-bg-secondary"> <%= Commande.find(@commandeId).texte_record if @commandeId.present? %> </span> 
          <span class="badge text-bg-secondary"> <%= Client.find(@clientId).full_name if @clientId.present? %> </span> 
        </div>
    </div>
</div>