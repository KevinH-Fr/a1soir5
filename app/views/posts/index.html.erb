
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Afficher", post, class:"btn btn-primary" %>
      <%#= link_to "PDF", post_path(post, format: :pdf), class:"btn btn-warning" %>
    </p>
  <% end %>
</div>

