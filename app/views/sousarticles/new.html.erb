<% if session[:commandeId].present? %>
  <% @commandeId = session[:commandeId] %>
<% else %>
  <% @commandeId = params[:commandeId] %>
<% end %>

<% @clientId = Commande.find(@commandeId).client_id if @commandeId.present? %>

<div class="bloc-entete-model">
  <div class="card card-header entete-index m-0 p-1">
    <div class="container p-0 m-0">
      <div class="row m-0 p-0">
        <div class="col-6 text-start fw-bold m-0 p-1"> Nouveau sous-article </div>
        <div class="col-6 text-end m-0 p-1">
          <span class="badge text-bg-primary"> <%= Produit.find(Article.find(@articleId).produit_id).nom if @articleId.present? %> </span> 
          <span class="badge text-bg-secondary"> <%= Commande.find(@commandeId).texte_record if @commandeId.present? %> </span> 
          <span class="badge text-bg-secondary"> <%= Client.find(@clientId).full_name if @clientId.present? %> </span> 
          
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card"> <%= render "selection_produit/search" %> </div>
<div class="card my-1"> <%= render "selection_produit/choixCategorie" %> </div>


<%# liste des produits pour selection %>
<div class="bloc-record">
  <% unless @produitId.present? %> 
    <%= render "selection_produit/listeSelection" %>
  <% end %>

  <%= render "form", sousarticle: @sousarticle %>


</div>


