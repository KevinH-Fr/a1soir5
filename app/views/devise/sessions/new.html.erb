<div class="container-centered">
  <div class="bloc-entete-model">
    <div class="card card-header entete-index text-center">
      <strong>Connexion</strong>
    </div>

  <div class="bloc-record">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-dark p-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field text-dark p-2">
        <%= f.label :mot_de_passe %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-dark p-2">
          <%= f.check_box :remember_me %>
          <%= f.label :se_souvenir_de_moi %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Connexion", class:"btn btn-sm btn-primary my-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>