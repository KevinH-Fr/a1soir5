            const rootPath = window.location.origin;
            const commandeId = <%= @commandeId.to_json.html_safe %>;
            const arrayProduits = resultIntArray;

            const baseUrl = "/articles/new_multiple?commandeId=" + commandeId + "&produits_ids=" + arrayProduits;
            const fullPath = rootPath + baseUrl;
            console.log(`arrayProduits : [${arrayProduits}]`);
            window.location.assign(fullPath);
          });


